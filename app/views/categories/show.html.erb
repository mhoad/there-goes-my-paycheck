<div class="row">
  <nav class="col-3 col-sm-3 col-lg-3">
    <div class="bs-sidebar">
      <ul class="nav bs-sidenav">
        <li><a href="#"><strong><%= @category.name %></strong></a></li>
        <li>
          <ul class="nav">
            <% @category.subcategories.each do |category| %>
            <li><%= link_to category.name, category_path(category) %></li>
            <% end %>
          </ul>
        </li>
        <% @top_level_categories.each do |category| %>
          <li><%= link_to category.name, category_path(category) %></li>
        <% end %>
      </ul>
    </div>
  </nav>
  <section itemprop="mainContentOfPage" class="col-9 col-sm-9 col-lg-9">
    <ul itemprop="breadcrumb" class="breadcrumb">
      <li><span class="glyphicon glyphicon-home"></span> <%= link_to "Home", root_path %></li>
      <% if !@category.parent_category.nil? %>              
        <li><a href="#"><%= link_to @category.parent_category.name, category_path(@category.parent_category) %></a></li>
      <% end %>
      <li class="active"><%= @category.name %></li>
    </ul>
    <section class="page-header">
      <h1 itemprop="headline"><%= @category.name %> 
        <small>
          <%= link_to "Edit category", edit_category_path(@category) %>
          <%= link_to "Delete category", category_path(params[:id]), method: "delete" %>
        </small>
      </h1>
      <%= @category.description %>
    </section>
  </section>
</div>